<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/black_50"
        app:cardElevation="0dp"
        app:contentPadding="5dp"
        app:layout_widthPercent="90%"
        android:layout_height="wrap_content" >

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/lbl_time"
                app:layout_widthPercent="20%"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/img_condition"
                app:layout_widthPercent="10%"
                app:layout_aspectRatio="100%"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/lbl_time" />

            <TextView
                android:id="@+id/lbl_temp"
                app:layout_widthPercent="15%"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/img_condition" />

            <TextView
                android:id="@+id/lbl_humidity"
                android:gravity="end"
                app:layout_widthPercent="25%"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/lbl_temp" />

            <TextView
                android:id="@+id/lbl_wind"
                android:gravity="end"
                app:layout_widthPercent="30%"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/lbl_humidity" />

        </android.support.percent.PercentRelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.percent.PercentFrameLayout>